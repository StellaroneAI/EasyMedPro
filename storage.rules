rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Deny all reads and writes by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload to their own folder.
    // Files are not publicly readable. Access must be granted via secure download URLs.
    match /patients/{userId}/uploads/{fileName} {
      allow write: if request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
  }
}