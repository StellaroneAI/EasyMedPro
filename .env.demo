# Demo Environment Variables for Testing
# DO NOT USE IN PRODUCTION - THESE ARE DEMO CREDENTIALS

# Twilio SMS Authentication Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# JWT Authentication Configuration
JWT_SECRET=demo_secret_key_for_development_only_32chars
JWT_REFRESH_SECRET=demo_refresh_secret_key_for_development_32c
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SMS Configuration for Indian Healthcare
SMS_OTP_LENGTH=6
SMS_OTP_EXPIRY_MINUTES=10
SMS_MAX_RETRY_ATTEMPTS=3
SMS_RATE_LIMIT_WINDOW=15
SMS_RATE_LIMIT_MAX_REQUESTS=5

# Indian Phone Number Configuration
PHONE_COUNTRY_CODE=+91
PHONE_MIN_LENGTH=10
PHONE_MAX_LENGTH=10

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# Development Mode
NODE_ENV=development

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration  
VITE_MONGODB_URI=your_mongodb_connection_string
DATABASE_URL=your_mongodb_connection_string_here

# AI4Bharat Integration Configuration
VITE_AI4BHARAT_API_ENDPOINT=https://api.ai4bharat.org/v1
VITE_AI4BHARAT_API_KEY=your_ai4bharat_api_key_here

# Feature Flags for AI4Bharat
VITE_ENABLE_AI4BHARAT=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_RURAL_OPTIMIZATIONS=true
VITE_ENABLE_TRADITIONAL_MEDICINE=true

# Rural India Specific Settings
VITE_LOW_BANDWIDTH_MODE=true
VITE_CACHE_ENABLED=true
VITE_MAX_CACHE_SIZE=50MB

# Medical Database Configuration
VITE_MEDICAL_TERMINOLOGY_VERSION=1.0
VITE_EMERGENCY_NUMBER=108
VITE_DEFAULT_LANGUAGE=hindi

# Performance Settings for Rural Areas
VITE_AUDIO_QUALITY=standard
VITE_TRANSLATION_TIMEOUT=5000
VITE_VOICE_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=EasyMedPro