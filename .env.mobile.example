# EasyMedPro Mobile App Environment Configuration
# Copy this file to .env and update the values according to your setup

# =====================================
# Java & Android Development Environment
# =====================================
JAVA_HOME=C:\Program Files\Eclipse Adoptium\jdk-21.0.8.9-hotspot
ANDROID_HOME=C:\Users\D2K2\AppData\Local\Android\Sdk

# =====================================
# Backend API Configuration
# =====================================
# Development API URL (local server)
VITE_API_BASE_URL=http://localhost:3000

# Production API URL (deployed server) 
# VITE_API_BASE_URL=https://your-deployed-api.vercel.app

# =====================================
# Firebase Configuration
# =====================================
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# =====================================
# Twilio Configuration (for SMS/OTP)
# =====================================
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =====================================
# ABHA Integration (Indian Healthcare)
# =====================================
VITE_ABHA_BASE_URL=https://abhasbx.abdm.gov.in
VITE_ABHA_CLIENT_ID=your_abha_client_id
VITE_ABHA_CLIENT_SECRET=your_abha_client_secret

# =====================================
# AI4Bharat Translation Service
# =====================================
VITE_AI4BHARAT_API_URL=https://dhruva-api.bhashini.gov.in
VITE_AI4BHARAT_API_KEY=your_ai4bharat_api_key

# =====================================
# Development Mode Settings
# =====================================
NODE_ENV=development
VITE_DEBUG=true
VITE_ENABLE_LOGGING=true

# =====================================
# Mobile App Specific Settings
# =====================================
# Enable/disable features for mobile
VITE_ENABLE_CAMERA=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true

# Deep linking scheme
VITE_APP_SCHEME=easymedpro

# =====================================
# Security Settings
# =====================================
VITE_JWT_SECRET=your_jwt_secret_key_here
VITE_ENCRYPTION_KEY=your_encryption_key_here

# =====================================
# Third-party Services
# =====================================
# Google Maps API (for location services)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Push notification service keys
VITE_FCM_VAPID_KEY=your_fcm_vapid_key
VITE_FCM_SERVER_KEY=your_fcm_server_key

# =====================================
# Feature Flags
# =====================================
VITE_FEATURE_VOICE_ASSISTANT=false
VITE_FEATURE_AI_DIAGNOSIS=false
VITE_FEATURE_TELEMEDICINE=true
VITE_FEATURE_PHARMACY_INTEGRATION=true
