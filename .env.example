# EasyMedPro Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ======================================
# FIREBASE CONFIGURATION (REQUIRED)
# ======================================
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=easymed-8c074.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=easymed-8c074
VITE_FIREBASE_STORAGE_BUCKET=easymed-8c074.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# ======================================
# ENVIRONMENT CONFIGURATION
# ======================================
NODE_ENV=development
VITE_APP_ENV=development

# ======================================
# API ENDPOINTS
# ======================================
# Development API (local server)
VITE_API_BASE_URL=http://localhost:5000
# Production API
# VITE_API_BASE_URL=https://api.easymedpro.com

# ======================================
# MCP (Model Context Protocol) CONFIGURATION
# ======================================
# MCP Gateway - DO NOT call from client, use backend proxy only
MCP_GATEWAY_BASE_URL=https://mcp.stellarone.health
MCP_JWT_SIGNING_KEY=your_mcp_jwt_signing_key_here

# ======================================
# TWILIO CONFIGURATION (SMS/OTP)
# ======================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# ======================================
# SECURITY CONFIGURATION
# ======================================
# JWT Secret for backend authentication
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h

# ======================================
# CORS CONFIGURATION
# ======================================
# Allowed origins for CORS (comma separated)
CORS_ORIGINS=https://easymed-8c074.web.app,http://localhost:5173,http://localhost:3000

# ======================================
# ANDROID BUILD CONFIGURATION
# ======================================
# Android signing (for release builds)
ANDROID_STORE_PASSWORD=your_android_store_password_here
ANDROID_KEY_PASSWORD=your_android_key_password_here

# ======================================
# iOS BUILD CONFIGURATION
# ======================================
# Apple Developer credentials (for iOS builds)
APPLE_ID=your_apple_developer_email_here
APP_STORE_CONNECT_API_KEY=your_app_store_connect_api_key_here
APP_STORE_CONNECT_API_ISSUER=your_app_store_connect_issuer_here
APP_STORE_CONNECT_API_KEY_ID=your_app_store_connect_key_id_here

# ======================================
# OPTIONAL INTEGRATIONS
# ======================================
# OpenAI API for AI features
OPENAI_API_KEY=your_openai_api_key_here

# Email service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ======================================
# DEVELOPMENT CONFIGURATION
# ======================================
# Debug modes
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGGING=true

# Feature flags
VITE_ENABLE_VOICE_ASSISTANT=true
VITE_ENABLE_CAMERA_FEATURES=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ======================================
# ANALYTICS & MONITORING
# ======================================
# Google Analytics (optional)
VITE_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# Sentry error tracking (optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# ======================================
# NOTES
# ======================================
# 1. Never commit your actual .env file to version control
# 2. Use strong, unique passwords for production
# 3. Rotate secrets regularly
# 4. Keep development and production secrets separate
# 5. MCP calls should only be made from backend, never from client
